{
  "manifest_version": 3,
  "name": "Translate",
  "description": "Translate any text to your preferred language...",
  "version": "1.0",
  "permissions": ["storage", "scripting", "sidePanel", "contextMenus"],
  "action": {
    "default_title": "Translation Content",
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/translation-16.png",
      "24": "assets/translation-24.png",
      "32": "assets/translation-32.png",
      "64": "assets/translation-64.png",
      "128": "assets/translation-128.png"
    }
  },
  "side_panel": {
    "default_path": "src/sidepanel.html"
  },
  "host_permissions": ["http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],
  "background": {
    "service_worker": "/background/background.js",
    "type": "module"
  }
}
