{
  "manifest_version": 3,
  "name": "Translate",
  "description": "Translate any text to your preferred language...",
  "version": "1.0",
  "permissions": ["storage", "scripting", "sidePanel", "contextMenus", "tabs"],
  "action": {
    "default_title": "Translation Content"
  },
  "icons": {
    "16": "assets/images/translation-16.png",
    "24": "assets/images/translation-24.png",
    "32": "assets/images/translation-32.png",
    "64": "assets/images/translation-64.png",
    "128": "assets/images/translation-128.png"
  },
  "side_panel": {
    "default_path": "src/sidepanel.html"
  },
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  }
}
